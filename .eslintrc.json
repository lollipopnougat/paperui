{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/semi": "error",
    "@typescript-eslint/no-unused-vars": "warn",
    "semi": "error",
    "arrow-spacing": "error",
    "brace-style": "warn",
    "camelcase": "warn",
    "comma-dangle": [
      "warn",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "constructor-super": "warn",
    "curly": "warn",
    // "eqeqeq": "warn",
    // "no-extra-parens": "warn",
    "no-extra-semi": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-new-symbol": "error",
    "no-throw-literal": "warn",
    "no-trailing-spaces": "warn",
    "no-unused-vars": "warn",
    "no-useless-computed-key": "error",
    "no-var": "error",
    "prefer-arrow-callback": "warn",
    "prefer-const": "warn",
    "prefer-rest-params": "warn",
    "prefer-template": "warn",
    "quotes": [
      "warn",
      "single"
    ]
  },
  "ignorePatterns": [
    "output",
    "node_modules",
    "lib",
    "static",
    // "**/*.d.ts",
    "*.html"
  ]
}